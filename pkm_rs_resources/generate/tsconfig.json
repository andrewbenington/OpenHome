{
  "compilerOptions": {
    "target": "esnext",
    "lib": [
      "ESNext"
    ],
    "module": "ESNext",
    "moduleResolution": "bundler",
    "outDir": "out",
    "rootDir": ".",
    "listEmittedFiles": true,
    "noEmit": true,
    "allowImportingTsExtensions": true
  },
  "include": [
    "./*.ts"
  ]
}