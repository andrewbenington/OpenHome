{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "OpenHome",
  "version": "1.6.0",
  "identifier": "OpenHome",
  "build": {
    "beforeDevCommand": "npm run dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "npm run build",
    "frontendDist": "../dist"
  },
  "app": {
    "windows": [
      {
        "title": "OpenHome",
        "width": 1200,
        "height": 720,
        "dragDropEnabled": true
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "linux": {
      "deb": {
        "files": {
          "dev.andrewbenington.OpenHome.metainfo.xml": "./dev.andrewbenington.OpenHome.metainfo.xml"
        },
        "desktopTemplate": "./template.desktop"
      }
    },
    "active": true,
    "targets": ["appimage", "deb", "rpm", "nsis", "dmg"],
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "macOS": {
      "signingIdentity": "9MGK3X58YN",
      "minimumSystemVersion": "14.6"
    },
    "resources": [
      "assets/Pkm.db"
    ]
  }
}
